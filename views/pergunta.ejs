<%- include ('./partials/header.ejs')%>

<body>
    <%- include ('./partials/navbar.ejs')%>
	<div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form action="/responder" method="POST">
            <label for="corpo"></label>
            <textarea name="corpo" id="corpo" class="form-control" placeholder="Digie sua Resposta" ></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button class="btn btn-primary mt-2">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <% }) %>
	</div>
</body>
<%- include ('./partials/footer.ejs')%>
