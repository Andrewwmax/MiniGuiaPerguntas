<%- include ('./partials/header.ejs')%>

<body>
    <%- include ('./partials/navbar.ejs')%>
	<div class="container">
		<hr>
		<h1>Perguntas</h1>
		<hr>
		<a href="/perguntar" class="btn btn-outline-primary mb-4">Perguntar</a>
		<% perguntas.forEach(pergunta => {%>
			<br>
			<div class="card">
				<div class="card-body">
					<h3><p><%= pergunta.titulo %></p>
				</div>
				<div class="card-footer">
					<a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-outline-primary">Responder</button></a>
				</div>
			</div>
		<% }) %>
	</div>
</body>
<%- include ('./partials/footer.ejs')%>
